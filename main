            font-family: 'Montserrat', sans-serif;
            transition: all var(--transition-speed) ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--accent-blue);
            box-shadow: 0 0 0 2px rgba(0, 168, 255, 0.2);
        }

