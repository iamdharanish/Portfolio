    <style>
        :root {
            --primary-bg: #0a0a0f;
            --secondary-bg: #14141c;
            --glass-bg: rgba(25, 25, 35, 0.7);
            --accent-blue: #00a8ff;
            --accent-purple: #9c27b0;
            --accent-gold: #ffc107;
            --accent-cyan: #00f0ff;
            --accent-pink: #ff2d75;
            --text-primary: #ffffff;
            --text-secondary: #b0b0b0;
            --transition-speed: 0.4s;
            --border-radius: 12px;
            --blur-amount: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: var(--primary-bg);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
            background-image: 
                radial-gradient(circle at 20% 30%, rgba(156, 39, 176, 0.15) 0%, transparent 25%),
                radial-gradient(circle at 80% 70%, rgba(0, 168, 255, 0.15) 0%, transparent 25%),
                radial-gradient(circle at 50% 20%, rgba(255, 45, 117, 0.1) 0%, transparent 25%);
            position: relative;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, 
                rgba(10, 10, 15, 0.95) 0%, 
                rgba(20, 20, 28, 0.98) 100%);
            z-index: -2;
        }

        /* Particle Background */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            animation: float-particle linear infinite;
        }

        @keyframes float-particle {
            0% { transform: translateY(0) translateX(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) translateX(20px); opacity: 0; }
        }

        /* Floating Shapes */
        .floating-shape {
            position: fixed;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.15;
            z-index: -1;
            animation: float-shape 15s ease-in-out infinite;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: var(--accent-blue);
            top: 20%;
            left: 10%;
        }

        .shape-2 {
            width: 400px;
            height: 400px;
            background: var(--accent-purple);
            bottom: 10%;
            right: 10%;
            animation-delay: 3s;
        }

        .shape-3 {
            width: 250px;
            height: 250px;
            background: var(--accent-pink);
            top: 60%;
            left: 30%;
            animation-delay: 6s;
        }

        @keyframes float-shape {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(50px, 50px) rotate(5deg); }
            50% { transform: translate(0, 100px) rotate(0deg); }
            75% { transform: translate(-50px, 50px) rotate(-5deg); }
        }

        /* Cursor Effects */
        .cursor {
            position: fixed;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: rgba(0, 240, 255, 0.5);
            pointer-events: none;
            mix-blend-mode: screen;
            z-index: 9999;
            transform: translate(-50%, -50%);
            transition: transform 0.1s ease, width 0.3s ease, height 0.3s ease;
        }

        .cursor-follower {
            position: fixed;
            width: 40px;
            height: 40px;
            border: 2px solid rgba(0, 168, 255, 0.5);
            border-radius: 50%;
            pointer-events: none;
            z-index: 9998;
            transform: translate(-50%, -50%);
            transition: transform 0.4s ease, width 0.4s ease, height 0.4s ease;
        }

        /* Login Container */
        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 2rem;
            perspective: 1000px;
            position: relative;
        }

        .login-box {
            width: 380px;
            padding: 2.5rem;
            background: var(--glass-bg);
            backdrop-filter: blur(var(--blur-amount));
            -webkit-backdrop-filter: blur(var(--blur-amount));
            border-radius: var(--border-radius);
            box-shadow: 0 25px 45px rgba(0, 0, 0, 0.4),
                        0 0 0 1px rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transform-style: preserve-3d;
            transition: all var(--transition-speed) ease;
            position: relative;
            overflow: hidden;
            z-index: 10;
        }

        .login-box:hover {
            transform: translateY(-5px) rotateX(2deg);
            box-shadow: 0 30px 50px rgba(0, 0, 0, 0.5),
                        0 0 0 1px rgba(255, 255, 255, 0.1);
        }

        .login-box::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                45deg,
                transparent 0%,
                rgba(0, 240, 255, 0.1) 30%,
                rgba(156, 39, 176, 0.1) 70%,
                transparent 100%
            );
            transform: rotate(45deg);
            animation: shine 8s infinite linear;
            z-index: -1;
        }

        .login-box::after {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: var(--border-radius);
            padding: 1px;
            background: linear-gradient(135deg, 
                rgba(0, 168, 255, 0.3), 
                rgba(156, 39, 176, 0.3));
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }

        @keyframes shine {
            0% { transform: translateX(-100%) rotate(45deg); }
            100% { transform: translateX(100%) rotate(45deg); }
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
            position: relative;
        }

        .login-header h1 {
            font-size: 2rem;
            font-weight: 600;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-purple));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 10px rgba(0, 168, 255, 0.2);
        }

        .login-header p {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .login-header::after {
            content: '';
            display: block;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-purple));
            margin: 1rem auto 0;
            border-radius: 3px;
            box-shadow: 0 0 10px rgba(0, 168, 255, 0.3);
        }

        /* Input Fields */
        .input-group {
            position: relative;
            margin-bottom: 1.8rem;
        }

        .input-group input {
            width: 100%;
            padding: 1rem 1rem 1rem 0;
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            color: var(--text-primary);
            font-size: 1rem;
            transition: all var(--transition-speed) ease;
        }

        .input-group input:focus {
            outline: none;
            border-bottom-color: var(--accent-blue);
        }

        .input-group label {
            position: absolute;
            top: 1rem;
            left: 0;
            color: var(--text-secondary);
            pointer-events: none;
            transition: all var(--transition-speed) ease;
        }

        .input-group input:focus + label,
        .input-group input:valid + label {
            top: -0.5rem;
            font-size: 0.8rem;
            color: var(--accent-blue);
            text-shadow: 0 0 8px rgba(0, 168, 255, 0.3);
        }

        .input-highlight {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 2px;
            width: 0;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-purple));
            transition: width var(--transition-speed) ease;
            box-shadow: 0 0 10px rgba(0, 168, 255, 0.3);
        }

        .input-group input:focus ~ .input-highlight {
            width: 100%;
        }

        /* Action Buttons */
        .login-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            font-size: 0.9rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
        }

        .remember-me input {
            margin-right: 0.5rem;
            accent-color: var(--accent-blue);
            cursor: pointer;
        }

        .remember-me label {
            color: var(--text-secondary);
            cursor: pointer;
            transition: color var(--transition-speed) ease;
        }

        .remember-me:hover label {
            color: var(--text-primary);
        }

        .forgot-password {
            color: var(--text-secondary);
            text-decoration: none;
            transition: color var(--transition-speed) ease;
            position: relative;
        }

        .forgot-password::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 1px;
            background: var(--accent-blue);
            transition: width var(--transition-speed) ease;
        }

        .forgot-password:hover {
            color: var(--accent-blue);
        }

        .forgot-password:hover::after {
            width: 100%;
        }

        .submit-btn {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-purple));
