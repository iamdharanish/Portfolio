        }

        .about-text p:nth-child(3)::before {
            background: var(--accent-pink);
        }

        .about-image {
            flex: 1;
            display: flex;
            justify-content: center;
            position: relative;
        }

        .about-image img {
            max-width: 100%;
            border-radius: var(--border-radius);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

        .about-image::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
