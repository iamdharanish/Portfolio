        <!-- Back to Top Button -->
        <a href="#" class="back-to-top" id="backToTop">
            <i class="fas fa-arrow-up"></i>
        </a>
    </div>

    <!-- Project Modal -->
    <div class="modal" id="projectModal">
        <div class="modal-content">
            <button class="modal-close" id="modalClose">
                <i class="fas fa-times"></i>
            </button>
            <img src="" alt="Project Image" class="modal-image" id="modalImage">
            <h2 class="modal-title" id="modalTitle">Project Title</h2>
            <p class="modal-description" id="modalDescription">Project description goes here...</p>
            <div class="modal-tags" id="modalTags"></div>
            <div class="modal-links">
                <a href="#" class="modal-link live" id="liveLink" target="_blank"><i class="fas fa-external-link-alt"></i> Live Demo</a>
                <a href="#" class="modal-link code" id="codeLink" target="_blank"><i class="fab fa-github"></i> View Code</a>
            </div>
        </div>
    </div>

    <script>
        // Loading Animation
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.querySelector('.loader').classList.add('hidden');
            }, 1500);
        });

        // Custom Cursor
        const cursor = document.querySelector('.cursor');
        const cursorFollower = document.querySelector('.cursor-follower');
        
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
            
            setTimeout(() => {
                cursorFollower.style.left = e.clientX + 'px';
                cursorFollower.style.top = e.clientY + 'px';
            }, 100);
        });
        
        // Cursor effects on hover
        const hoverElements = document.querySelectorAll('a, button, .portfolio-card, .skill-item, input, textarea, .social-btn');
        
        hoverElements.forEach(el => {
            el.addEventListener('mouseenter', () => {
                cursor.style.transform = 'scale(2)';
                cursor.style.background = 'rgba(0, 240, 255, 0.3)';
                cursorFollower.style.transform = 'scale(0.5)';
                cursorFollower.style.borderColor = 'rgba(0, 240, 255, 0.5)';
            });
            
            el.addEventListener('mouseleave', () => {
                cursor.style.transform = 'scale(1)';
                cursor.style.background = 'rgba(0, 240, 255, 0.5)';
                cursorFollower.style.transform = 'scale(1)';
                cursorFollower.style.borderColor = 'rgba(0, 168, 255, 0.5)';
            });
        });

        // Particle Background
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Random size
                const size = Math.random() * 5 + 1;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Random position
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                // Random opacity
                particle.style.opacity = Math.random() * 0.5 + 0.1;
                
                // Random animation duration
                const duration = Math.random() * 20 + 10;
                particle.style.animationDuration = `${duration}s`;
                
                // Random delay
                particle.style.animationDelay = `${Math.random() * 10}s`;
                
                particlesContainer.appendChild(particle);
            }
        }
        
        createParticles();

        // Login functionality
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get input values
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            // Simple validation (in a real app, this would be server-side)
            if (username && password) {
                // Show loading animation
                document.querySelector('.loader').classList.remove('hidden');
                
                // Simulate login delay
                setTimeout(function() {
                    // Hide login, show portfolio
                    document.querySelector('.auth-container').style.display = 'none';
                    document.getElementById('portfolio').style.display = 'block';
                    
                    // Hide loading animation
                    document.querySelector('.loader').classList.add('hidden');
                    
                    // Smooth scroll to top
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                    
                    // Animate skills bars
                    animateSkillBars();
                }, 1500);
            } else {
                alert('Please enter both username and password');
            }
        });
        
        // Signup link (just for demo)
        document.getElementById('signupLink').addEventListener('click', function(e) {
            e.preventDefault();
            alert('Signup functionality would go here in a real application');
        });
        
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        
        mobileMenuBtn.addEventListener('click', function() {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active') ? 
                '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
        });
        
        // Close mobile menu when clicking a link
        document.querySelectorAll('.portfolio-nav-links a').forEach(link => {
            link.addEventListener('click', function() {
                if (navLinks.classList.contains('active')) {
                    navLinks.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                }
            });
        });
        
        // Navigation scroll effect
        window.addEventListener('scroll', function() {
            const nav = document.getElementById('portfolioNav');
            if (window.scrollY > 50) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
            
            // Back to top button visibility
            const backToTop = document.getElementById('backToTop');
            if (window.scrollY > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });
        
        // Smooth scrolling for navigation links
        document.querySelectorAll('.portfolio-nav-links a, .header-actions a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                window.scrollTo({
                    top: targetElement.offsetTop - 80,
                    behavior: 'smooth'
                });
                
                // Update active link
                document.querySelectorAll('.portfolio-nav-links a').forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === targetId) {
                        link.classList.add('active');
                    }
                });
            });
        });
        
        // Update active nav link based on scroll position
        window.addEventListener('scroll', function() {
            const scrollPosition = window.scrollY;
            
            document.querySelectorAll('.portfolio-section').forEach(section => {
                const sectionTop = section.offsetTop - 100;
                const sectionBottom = sectionTop + section.offsetHeight;
                const sectionId = section.getAttribute('id');
                
                if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                    document.querySelectorAll('.portfolio-nav-links a').forEach(link => {
                        link.classList.remove('active');
                        if (link.getAttribute('href') === `#${sectionId}`) {
                            link.classList.add('active');
                        }
                    });
                }
            });
        });
        
        // Back to top button
        document.getElementById('backToTop').addEventListener('click', function(e) {
            e.preventDefault();
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // Animate skill bars on scroll
        function animateSkillBars() {
            const skillBars = document.querySelectorAll('.skill-level-bar');
            skillBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        }
        
        // Project Modal
        const projects = {
            ecommerce: {
                title: "Flipkart-Style E-commerce UI",
                description: "Complete e-commerce interface with responsive product grids, shopping cart functionality, and seamless checkout flow. This project included designing the entire user journey from product discovery to checkout, with special attention to mobile responsiveness and accessibility standards.",
                tags: ["E-commerce", "UI Design", "Responsive", "Accessibility"],
                image: "https://images.unsplash.com/photo-1555529669-e69e7aa0ba9a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80",
                live: "#",
                code: "#"
            },
            dashboard: {
                title: "Textile Machinery Dashboard",
                description: "Industrial interface for textile machinery with real-time monitoring and data visualization components. The dashboard provides operators with critical machine metrics, production statistics, and alert systems in an intuitive interface that reduces training time and improves efficiency.",
                tags: ["Industrial UI", "Dashboard", "Data Visualization", "Real-time"],
                image: "https://images.unsplash.com/photo-1513828583688-c52646db42da?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80",
                live: "#",
                code: "#"
            },
            mobile: {
                title: "Mobile UI Customization",
                description: "Custom mobile interfaces including wallpapers, icon sets, and theme designs for various devices. This project involved creating cohesive design systems that could be adapted across different screen sizes and platforms while maintaining brand consistency and visual appeal.",
                tags: ["Mobile UI", "Themes", "Wallpapers", "Icon Design"],
                image: "https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80",
                live: "#",
                code: "#"
            },
            email: {
                title: "Responsive Email Templates",
                description: "HTML email templates designed for Brevo campaigns with perfect rendering across all email clients. These templates were built with a mobile-first approach and tested across 50+ email clients to ensure consistent rendering, with special attention to Outlook compatibility.",
                tags: ["Email Design", "HTML", "Responsive", "Campaign"],
                image: "https://images.unsplash.com/photo-1544717305-2782549b5136?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80",
                live: "#",
                code: "#"
            },
            social: {
                title: "Social Media Branding",
                description: "Complete social media branding packages including profile designs, post templates, and marketing materials. This comprehensive package helped businesses establish a consistent visual identity across all social platforms with templates for various content types and campaigns.",
                tags: ["Social Media", "Branding", "Marketing", "Visual Identity"],
                image: "https://images.unsplash.com/photo-1611162617213-7d7a39e9b1d7?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80",
                live: "#",
                code: "#"
            },
            navigation: {
                title: "Website Navigation Systems",
                description: "Intuitive navigation designs with global reach focus, optimized for user experience and accessibility. These navigation patterns were tested with real users to ensure findability and incorporated progressive enhancement techniques for optimal performance across devices.",
                tags: ["Navigation", "UX Design", "Accessibility", "User Testing"],
                image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80",
                live: "#",
                code: "#"
            }
        };
        
        const modal = document.getElementById('projectModal');
        const modalClose = document.getElementById('modalClose');
        const modalImage = document.getElementById('modalImage');
        const modalTitle = document.getElementById('modalTitle');
        const modalDescription = document.getElementById('modalDescription');
        const modalTags = document.getElementById('modalTags');
        const liveLink = document.getElementById('liveLink');
        const codeLink = document.getElementById('codeLink');
        
        // Open modal when clicking project cards or view buttons
        document.querySelectorAll('.portfolio-card, .view-project').forEach(element => {
            element.addEventListener('click', function(e) {
                e.preventDefault();
                const projectId = this.getAttribute('data-project');
                const project = projects[projectId];
                
                if (project) {
                    modalImage.src = project.image;
                    modalImage.alt = project.title;
                    modalTitle.textContent = project.title;
                    modalDescription.textContent = project.description;
                    
                    // Clear and add tags
                    modalTags.innerHTML = '';
                    project.tags.forEach(tag => {
                        const tagElement = document.createElement('span');
                        tagElement.className = 'tag';
                        
                        // Add special classes for certain tags
                        if (tag === "Dashboard" || tag === "HTML" || tag === "Accessibility") {
                            tagElement.classList.add('purple');
                        } else if (tag === "Themes" || tag === "Branding") {
                            tagElement.classList.add('gold');
                        } else if (tag === "Marketing") {
                            tagElement.classList.add('pink');
                        }
                        
                        tagElement.textContent = tag;
                        modalTags.appendChild(tagElement);
                    });
                    
                    liveLink.href = project.live;
                    codeLink.href = project.code;
                    
                    modal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });
        
        // Close modal
        modalClose.addEventListener('click', function() {
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        });
        
        // Close modal when clicking outside content
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });
        
        // Contact form submission
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const name = document.getElementById('contact-name').value;
            const email = document.getElementById('contact-email').value;
            const subject = document.getElementById('contact-subject').value;
            const message = document.getElementById('contact-message').value;
            
            // Simple validation
            if (name && email && subject && message) {
                // In a real app, you would send this data to a server
                alert(`Thank you, ${name}! Your message has been sent. I'll get back to you soon.`);
                
                // Reset form
                this.reset();
            } else {
                alert('Please fill in all fields');
            }
        });
        
        // Social login buttons (demo)
        document.querySelectorAll('.social-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                alert('Social login would be implemented in a real application');
            });
        });
        // Import the functions you need from the SDKs you need

    </script>
    <script type="module">
  // Import the functions you need from the SDKs you need
  import { initializeApp } from "https://www.gstatic.com/firebasejs/12.0.0/firebase-app.js";
  import { getAnalytics } from "https://www.gstatic.com/firebasejs/12.0.0/firebase-analytics.js";
  // TODO: Add SDKs for Firebase products that you want to use
  // https://firebase.google.com/docs/web/setup#available-libraries

  // Your web app's Firebase configuration
  // For Firebase JS SDK v7.20.0 and later, measurementId is optional
  const firebaseConfig = {
    apiKey: "AIzaSyAYTqbdbuaH9NeO79VXrWko3z8mJF-xMO4",
    authDomain: "dharanish-portfolio.firebaseapp.com",
    projectId: "dharanish-portfolio",
    storageBucket: "dharanish-portfolio.firebasestorage.app",
    messagingSenderId: "337774221961",
    appId: "1:337774221961:web:612b02accc7b0847d20458",
    measurementId: "G-X2FQ7TM6LL"
  };

  // Initialize Firebase
  const app = initializeApp(firebaseConfig);
  const analytics = getAnalytics(app);
</script>
</body>
</html>
